import java.util.Scanner;
class Main{
    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the size of your shirt from the following choices (22,33,44,55) : ");
        int number = input.nextInt();
        String size;
        switch(number){
            case 22:
                System.out.println("Your shirt size is S");
                break;
            case 33:
                System.out.println("Your shirt size is M");
                break;
            case 44:
                System.out.println("Your shirt size is XL");
                break;
            case 55:
                System.out.println("Your shirt size is XXL");
                break;
            default:
                System.out.println("Your shirt size is out of stock");
        }
    }
}
